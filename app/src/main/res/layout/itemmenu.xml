<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_menu_mon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.ub.pis15.madmodes.madmodes_pis.RustickMon"
        android:background="@drawable/fondoprincipal">

        <ImageView
            android:id="@+id/titulo"
            android:background="@drawable/world1"
            android:layout_height="101dp"
            android:layout_width="282dp"
            app:layout_constraintTop_toTopOf="@+id/bBoss"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/r2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/r1"
            android:layout_marginTop="0dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageButton
            android:id="@+id/r1"
            android:background="@drawable/tmpbtnrunner"
            android:layout_width="100dp"
            app:layout_constraintTop_toTopOf="@+id/r2"
            app:layout_constraintBottom_toBottomOf="@+id/r2"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="77dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp" />

        <ImageButton
            android:id="@+id/r2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/tmpbtnrunner"
            app:layout_constraintBottom_toBottomOf="@+id/bBoss"
            app:layout_constraintLeft_toRightOf="@+id/r1"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_constraintLeft_creator="1" />

        <ImageButton
            android:id="@+id/bBoss"
            android:layout_height="0dp"
            android:layout_width="149dp"
            android:background="@drawable/tmpbtnboss"
            android:layout_marginStart="40dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bOptMon"
            android:background="@drawable/settingsbtn"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/mon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="-1dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>